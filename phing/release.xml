<?xml version="1.0" encoding="utf-8"?>
<project name="release" default="show info">
	<property name="project.name" value="type_name"/>
	<property name="project.version" value="0.0.0"/>
	<property name="project.package" value="${project.name}_${project.version}.zip"/>
	<taskdef name="release" classname="releaseTask"/>
	<target name="show info">
		<release action="showInfo" name="${project.name}" version="${project.version}" package="${project.package}"/>
	</target>
	<target name="change version">
		<release action="changeVersion" version="${project.version}"/>
	</target>
	<target name="change since">
		<release action="changeSince" version="${project.version}"/>
	</target>
	<target name="create package">
		<release action="createPackage" package="${project.package}"/>
	</target>
	<target name="create release">
		<release action="showInfo" name="${project.name}" version="${project.version}" package="${project.package}"/>
		<release action="changeVersion" version="${project.version}"/>
		<release action="createPackage" package="${project.package}"/>
	</target>
</project>